{
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext", // maybe 2020
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
